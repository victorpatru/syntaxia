{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/.vite/**",
      "!**/packages/tsconfig",
      "!**/dist/**",
      "!**/routeTree.gen.ts",
      "!bun.lock"
    ],
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/.vite/**",
      "!**/packages/tsconfig",
      "!**/dist/**",
      "!**/routeTree.gen.ts",
      "!bun.lock"
    ]
  }
}
